{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "share": true,
    "getController": true,
    "getLogger": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "max-depth": [
      "error",
      {
        "max": 3
      }
    ],
    "no-underscore-dangle": [
      "off"
    ],
    "import/no-dynamic-require": [
      "off"
    ],
    "global-require": [
      "off"
    ],
    "class-methods-use-this": [
      "off"
    ]
  }
}